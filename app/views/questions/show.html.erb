<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>
<p><strong>User:</strong> <%= @question.user.email %></p>

<%= link_to t('edit_question'), edit_question_path(@question) %>
<%= link_to(t('delete_question'), question_path(@question), method: :delete) %>

<hr>

<% unless @question.answers.empty? %>
  <h4>Answers</h4>
  <ul>
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.body %> by <%= answer.user.email %>
        <%= link_to(t('edit_answer'), edit_question_answer_path(@question, answer)) %>
        <%= link_to(t('delete_answer'), question_answer_path(@question, answer), method: :delete) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to t('new_answer'), new_question_answer_path(@question) %>

<%= link_to 'Back', questions_path %>
